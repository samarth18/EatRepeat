<% include partials/header.ejs %>
<a style="margin-right:10px;margin-top:10px;"class="float-right" href="/orders" title="Logout"
         >View Orders</a
       >
    <div class="table-wrapper">
        <% if (restaurants.length > 1) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col"></th>
                        <th scope="col">SNo</th>
                        <th scope="col">Restaurant</th>
                        <th scope="col">Rating</th>
                        <th scope="col"> </th>
                    </tr>
                </thead>
                <tbody>
                    <% restaurants.forEach((rest, index) => { %>
                        <tr>
                            <th scope="row"><%= %></th>
                            <th scope="row"><%= rest.rest_id %></th>
                            <td><%= rest.rest_name %></td>
                            <td><%= rest.rating %></td>
                            <td>
                                <a href="/menu/<%= rest.rest_id %>" target="_self" rel="noopener" class="btn btn-sm btn-success">Order</a>
                                
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No restaurants found. Go <a href="/add" >here</a> to add players.</p>
        <% } %>
    </div>
</div>
</body>
</html>