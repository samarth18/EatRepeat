<% include partials/header.ejs %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="register-user-form" action="" method="post" enctype="application/x-www-form-urlencoded">
            <div class="form-row">
                
                <div class="form-group col-md-7" style="margin-top:20px">
                    <input type="text" class="form-control" name="customer_name" id="customer-name" placeholder="Full Name" required>
                </div>

                <div class="form-group col-md-7">
                    <input type="text" class="form-control" name="address" id="address" placeholder="Address" required>
                </div>
                <div class="form-group col-md-7" >
                    <input type="text" class="form-control" name="phone" id="phone" placeholder="Contact Number" required>
                </div>
                <div class="form-group col-md-7" >
                        <input type="text" class="form-control" name="login_ID" id="login-id" placeholder="Username" required>
                </div>
                <div class="form-group col-md-7" >
                            <input type="password" class="form-control" name="passwd" id="passwd" placeholder="Password" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-left">Sign Up</button>
        </form>
    </div>
</div>
</body>
</html>